<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/galeria"
    android:orientation="vertical" >

    <!-- slubna -->
    
    <ImageView
        android:id="@+id/viewSlubna"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true" />
    
    <ImageView
        android:id="@+id/viewCeremonia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/viewSlubna"/>

    <ImageView
        android:id="@+id/viewPlener"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/viewCeremonia" />
    
    
    <!-- dziecieca -->
    <ImageView
        android:id="@+id/viewDziecieca"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true" />
    
    <ImageView
        android:id="@+id/viewNiemowleta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/viewSlubna"/>

    

    <ImageView
        android:id="@+id/viewDzieci"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/viewCeremonia" />
    
    <!-- kobieca --> 
    <ImageView
        android:id="@+id/viewKobieca"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true" />
    
    <ImageView
        android:id="@+id/viewCiaza"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/viewSlubna"/>

    

    <ImageView
        android:id="@+id/viewPortret"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/viewCeremonia" />

</RelativeLayout>
